<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>这是ejs模版</title>
    <style>
      table { border-collapse: collapse;}
      th,td { border:1px red solid;}
    </style>
</head>
<body>
  <h1>Hello EJS</h1>
  

  <% 
    for(const stu of stus){ %>
      <%=stu.name %>- <%=stu.age %>- <%=stu.gender %>- <%=stu.address %>
      <br/>
  <% }  %>
      <br/>
  <table border="1">
    <caption>Students in Class 1-1</caption>
    <thead>
      <tr>
       <th>ID</th>
       <th>Name</th>
       <th>Age</th>
       <th>Gender</th>
       <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% for(const stu of stus){ %>
      <tr>
        <td> <%=stu.id %></td>
        <td> <%=stu.name %></td>
        <td> <%=stu.age %></td>
        <td> <%=stu.gender %></td>
        <td> <%=stu.address %></td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <form action="/add_student" method="post">
    <div>Name: <input type="text" name="name" /></div>
    <div>Age: <input type="number" name="age" max="150" min="0" /></div>
    <div>
      Gender: <input type="radio" name="gender" value="Male" />Male
      <input type="radio" name="gender" value="Female" />Female
    </div>
    <div>Address: <input type="text" name="address" /></div>
    <button>submit</button>
  </form> 
</body>
</html>